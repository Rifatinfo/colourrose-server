<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Confirmed</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      margin: 0;
      padding: 0;
      background: #f4f4f4;
      font-family: Arial, Helvetica, sans-serif;
      color: #111;
    }

    .wrapper {
      max-width: 640px;
      margin: 20px auto;
      background: #ffffff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    /* HEADER */
    .header {
      background: #000000;
      color: #ffffff;
      padding: 24px;
      text-align: center;
    }

    .header h1 {
      margin: 0;
      font-size: 22px;
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    .header p {
      margin: 8px 0 0;
      font-size: 14px;
      opacity: 0.9;
    }

    /* CONTENT */
    .content {
      padding: 24px;
      font-size: 14px;
    }

    .content p {
      margin: 8px 0;
      line-height: 1.6;
    }

    /* BUTTON */
    .btn {
      display: inline-block;
      margin: 18px 0;
      background: #000;
      color: #fff !important;
      text-decoration: none;
      padding: 12px 22px;
      border-radius: 6px;
      font-size: 14px;
      font-weight: bold;
    }

    /* SECTION */
    .section {
      margin-top: 22px;
      border-top: 1px solid #e5e5e5;
      padding-top: 16px;
    }

    .section h3 {
      margin: 0 0 12px;
      font-size: 15px;
      color: #000;
    }

    /* DETAILS TABLE */
    .details-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
    }

    .details-table td {
      padding: 6px 0;
    }

    .details-table td:first-child {
      color: #555;
      width: 40%;
    }

    /* ITEM */
    .item {
      display: flex;
      gap: 12px;
      padding: 12px 0;
      border-bottom: 1px solid #eee;
    }

    .item img {
      width: 70px;
      height: 70px;
      object-fit: cover;
      border-radius: 6px;
      background: #f2f2f2;
    }

    .item-info {
      flex: 1;
      font-size: 13px;
    }

    .item-info strong {
      display: block;
      margin-bottom: 4px;
    }

    /* TOTALS */
    .totals {
      margin-top: 12px;
      font-size: 13px;
    }

    .totals div {
      display: flex;
      justify-content: space-between;
      margin: 6px 0;
    }

    .totals .grand {
      font-weight: bold;
      font-size: 15px;
      border-top: 1px solid #ddd;
      padding-top: 10px;
    }

    /* FOOTER */
    .footer {
      background: #0b0b0b;
      color: #aaa;
      font-size: 12px;
      text-align: center;
      padding: 18px;
    }
  </style>
</head>

<body>
  <div class="wrapper">

    <!-- HEADER -->
    <div class="header">
      <h1>Order Confirmed</h1>
      <p>Thank you for shopping with ColourRose</p>
    </div>

    <!-- CONTENT -->
    <div class="content">
      <p>Dear <strong><%= name %></strong>,</p>

      <p>
        Yay! Your order <strong>#<%= orderId %></strong> has been successfully placed.
        We are preparing your items for delivery.
      </p>

      <a href="https://colourrose.shop" class="btn">Manage My Order</a>

      <!-- DELIVERY DETAILS -->
      <div class="section">
        <h3>Delivery Details</h3>
        <table class="details-table">
          <tr>
            <td>Name:</td>
            <td><%= name %></td>
          </tr>
          <tr>
            <td>Address:</td>
            <td><%= address %></td>
          </tr>
          <tr>
            <td>Payment Method:</td>
            <td><%= paymentMethod === 'COD' ? 'Cash on Delivery' : paymentMethod %></td>
          </tr>
        </table>
      </div>

      <!-- ORDER ITEMS -->
      <div class="section">
        <h3>Order Summary</h3>

        <% items.forEach(function(item){ %>
          <div class="item">
            <div class="item-info">
              <strong><%= item.productName %></strong>
              Qty: <%= item.quantity %><br/>
              <% if(item.color){ %>Color: <%= item.color %><br/><% } %>
              <% if(item.size){ %>Size: <%= item.size %><br/><% } %>
              Price: <%= item.price %> TK
            </div>
          </div>
        <% }) %>
      </div>

      <!-- TOTALS -->
      <div class="section totals">
        <div>
          <span>Subtotal</span>
          <span><%= subtotal %> TK</span>
        </div>
        <div>
          <span>Shipping</span>
          <span><%= shipping %> TK</span>
        </div>
        <div class="grand">
          <span>Total</span>
          <span><%= totalAmount %> TK</span>
        </div>
      </div>

      <p>
        A detailed invoice PDF is attached with this email.
        Please keep it for your records.
      </p>

      <p>
        Regards,<br/>
        <strong>ColourRose Team</strong>
      </p>
    </div>

    <!-- FOOTER -->
    <div class="footer">
      © <%= new Date().getFullYear() %> ColourRose · All rights reserved
    </div>

  </div>
</body>
</html>
